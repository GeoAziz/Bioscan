rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{userId} {

      // Who can read a user's document?
      // A user can read their own document if they are logged in.
      allow read: if request.auth != null && request.auth.uid == userId;

      // Who can write to a user's document?
      // A user can create, update, or delete their own document if they are logged in.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
